/**
 * Access Control List for the auction network.
 */
rule Contractor {
    description: "Allow the Contractor full access"
    participant: "org.acme.contract.Contractor"
    operation: ALL
    resource: "org.acme.contract.Contract.*"
    transaction(tx): "org.acme.contract.CloseContract"
    action: ALLOW
}

rule PublicRep {
    description: "Allow the PublicRep read access"
    participant: "org.acme.contract.PublicRep"
    operation: READ
    resource: "org.acme.contract.*"
    action: ALLOW
}

rule Department {
    description: "Allow the owner of a tender total access"
    participant(m): "org.acme.contract.Department"
    operation: ALL
    resource(v): "org.acme.contract.*"
    //condition: (v.owner.getIdentifier() == m.getIdentifier())
    action: ALLOW
}

rule TenderListingOwner {
    description: "Allow the owner of a tender total access to their tender listing"
    participant(m): "org.acme.tender.auction.Member"
    operation: ALL
    resource(v): "org.acme.tender.auction.TenderListing"
    //condition: (v.tender.owner.getIdentifier() == m.getIdentifier())
    action: ALLOW
}

rule SystemACL {
    description:  "System ACL to permit all access"
    participant: "org.hyperledger.composer.system.Participant"
    operation: ALL
    resource: "org.hyperledger.composer.system.**"
    action: ALLOW
}

rule NetworkAdminUser {
    description: "Grant business network administrators full access to user resources"
    participant: "org.hyperledger.composer.system.NetworkAdmin"
    operation: ALL
    resource: "**"
    action: ALLOW
}

rule NetworkAdminSystem {
    description: "Grant business network administrators full access to system resources"
    participant: "org.hyperledger.composer.system.NetworkAdmin"
    operation: ALL
    resource: "org.hyperledger.composer.system.**"
    action: ALLOW
}