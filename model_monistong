/**
 * Sample business network definition.
 */
namespace org.acme.contract

asset Contract identified by contractId {
  o String contractId
  --> Contractor contractor
  o String value
  o SubmitDocument[] document optional
}

enum ContractState{
  o OPEN
  o CLOSED
  o TO_BE_VALIDATED
  o VALIDATED
}

abstract participant Validator{
  o Boolean validated
}

participant Contractor identified by email{
  o String email
  o String firstName
  o String lastName
}

participant Engineer identified by email extends Validator{
  o String email
  o String firstName
  o String lastName
}

participant LabourRep identified by repId extends Validator{
  o String repId
  o String firstName
  o String lastName
}

participant Department identified by departmentId extends Validator{
  o String departmentId
  o String departmentName
}

participant Supplier identified by companyId extends Validator{
  o String companyId
  o String companyName
}

transaction SubmitDocument {
  --> Contract contract
  o String description
  o Double amount
  o Boolean validated
}

transaction CloseContract {
  --> Contract contract
}